@model Lexicon_LMS.Models.RegisterViewModel
@{
    ViewBag.Title = "Register new user";
}

<h2>Register new @Model.Role</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Role)

    <hr />

    if (ViewBag.Message != null )
    {
        <div>
            <ul>
                <li>
                    <p>@ViewBag.Message</p>
                </li>
            </ul>
        </div>
    }

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Skriv in förnamn på elev/lärare" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Skriv in efternamn på elev/lärare" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Skriv in en e-post för elev/lärare" })
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Skapa ett lösenord till elev/läraren" })
            </div>
        </div>

    if (Model.Role == "Student")
    {
        <div class="form-group">
            @Html.LabelFor(m => m.CourseId, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.CourseId, new SelectList(Model.Courses, "Id", "Name"), "none", new { @class = "form-control" })
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            @*<input type="submit" class="btn btn-default" value="Register" />*@
            <button class="btn btn-default" name="button" value="Save">Register</button>
            <button class="btn btn-default" name="button" value="SaveNew">Register and add another</button>

        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
