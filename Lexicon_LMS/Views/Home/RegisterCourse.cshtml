@model Lexicon_LMS.Models.Course
@{
    ViewBag.Title = "RegisterCourse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>@ViewBag.Title.</h2>


@using (Html.BeginForm("SaveCourse", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Id)
    <h4>Create a new Course.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder ="Skriv in ett kursnamn" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Description)
        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", placeholder = "Skriv in en beskrivning" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.StartDate)
        <div class="input-group" id="datetimepicker">
            @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", @Value = "",  @id = "datepickerStartDate", placeholder = "Välj startdatum" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.EndDate)
        <div class="input-group" id="datetimepicker">
            @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", @Value = "", @id = "datepickerEndDate", placeholder = "Välj slutdatum" })
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-default" value="Register" />
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


