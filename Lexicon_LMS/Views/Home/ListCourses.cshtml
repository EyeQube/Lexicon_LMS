@model IEnumerable<Lexicon_LMS.Models.Course>

@{
    ViewBag.Title = "ListCourses";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2><b>Courses</b></h2>

@if (!Model.Any())
{
    <p>There are no courses at the moment</p>
}

else
{
 <div class="dl-horizontal" style="background-color:snow">    
        <table class="table table-responsive dl-horizontal table-bordered" >
            <thead>
                <tr>
                    <th><b>Course</b></th>
                    @*<th>Description</th>*@
                    <th><b>Start Date</b></th>
                    <th><b>End Date</b></th>
                </tr>
            </thead>
      
            <tbody>
            
                @foreach (var course in Model)
             {
                <tr>       
                    <td>@Html.ActionLink(course.Name, "Course", "Home", new { id = course.Id }, null)</td>
                    @*<td>@course.Description</td>*@
                    <td> @Html.DisplayFor(m => course.StartDate, "{0:yyyy-MM-dd}")</td>  @*@course.StartDate.ToShortDateString()</td>*@
                    <td>@Html.DisplayFor(m => course.EndDate, "{0:yyyy-MM-dd}")</td>  @*@course.EndDate.ToShortDateString()</td>*@
                </tr>
             }

            </tbody>


        </table>


  </div>
}

